@using QLD.Library
@model  QLD.Models.ContractType
@{
    ViewBag.Title = "Cập nhật hợp đồng";
    Layout = "~/Views/Shared/_BackEnd.cshtml";
    var checkU = DefineFuntion.CheckRole("ContractTypeU,ContractType,QL");
    var checkC = DefineFuntion.CheckRole("ContractTypeC,ContractType,QL");
}

@using (Html.BeginForm())
{
    <section class="content-header">
        <h1>
            <a href="/"><i class="fa fa-home"></i> Trang chủ</a>
            <small>
                <a href="Index"> / Danh sách hợp đồng</a>
            </small>
            <small>/ Cập nhật hợp đồng</small>
        </h1>
        @{Html.RenderAction("ViewButtomEdit", "Admin", new { showE = checkU, showC = checkC, });}
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h2 class="box-title"><i class="fa fa-list"></i> <b>Cập nhật hợp đồng</b></h2>
                    </div>
                    @{Html.RenderAction("Notice", "Admin", new { mess = ViewBag.Mess });}
                    <hr />
                    <div class="box-body">
                        @Html.AntiForgeryToken()
                        @Html.Hidden("codeSystem", DefineFuntion.Encrypt(Model.ContractTypeId))
                        @Html.ValidationSummary(true)

                        <div class="col-md-9 box-info">


                            <div class="form-group select-custom">
                                @Html.Label("Tên Hợp Đồng ", new { @class = "control-label  " })
                                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "color-red" })
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", title = "Vui lòng nhập vào trường này!", required = "required" })
                            </div>
                            <div class="form-group select-custom">
                                @Html.Label("Ghi chú", new { @class = "control-label  " })
                                @Html.ValidationMessageFor(model => model.Note, null, new { @class = "color-red" })
                                @Html.TextAreaFor(model => model.Note, new { @class = "form-control", title = "Vui lòng nhập vào trường này!", required = "required" })
                            </div>
                        </div>
                        <div class="col-md-3 box-info">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
                        }
